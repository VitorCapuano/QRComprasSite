@model NAC.Models.AdquirenteModel

<div class="container" style="margin-top: 40px">
    <div class="col-md-8">

        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Pacote) <b>รก investir</b>: 
                        <select id="#Select">
                            @foreach (var item in ViewBag.ListPacote)
                            {
                                <option id="PacotesDisponiveis" value="@item.Value">@item.Value</option>
                            }
                            
                        </select>
                        @Html.TextBoxFor(m => m.Pacote, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.Pacote)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Qtd)
                        @Html.TextBoxFor(m => m.Qtd, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Qtd)
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.User)
                        @Html.TextBoxFor(m => m.User, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.User)
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" name="Salvar Pacote" class="btn btn-primary" value="Salvar" />
                        @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section scripts{
    <script>
        $( document ).ready(function() {
            $("#Pacote").val($("select").val());

            $("#User").val("@HttpContext.Current.Session["Usuario"].ToString()");
        });
        
        $("body").delegate("select", "change", function() {
            $("#Pacote").val($("select").val());
        })
    </script>



}