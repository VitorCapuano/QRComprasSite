@model NAC.Models.PacoteModel

<div class="container" style="margin-top: 40px">
    <div class="col-md-8">

        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Desc)
                        @Html.TextBoxFor(m => m.Desc, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Desc)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Valor)
                        @Html.TextBoxFor(m => m.Valor, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Valor)
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Estoque)
                        @Html.TextBoxFor(m => m.Estoque, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Estoque)
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" name="Salvar Pacote" class="btn btn-primary" value="Salvar" />
                        @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>